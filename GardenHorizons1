        ShopCache.lastUpdate = 0
        local data = GetShopDataRemote(true)
        if data and data.Items then
            print("===== T·ªíN KHO SHOP - " .. os.date("%H:%M:%S") .. " =====")
            for name, info in pairs(data.Items) do
                print(name .. ": " .. (info.Amount or 0))
            end
